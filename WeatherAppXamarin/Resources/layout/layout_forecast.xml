<?xml version="1.0" encoding="UTF-8" ?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<androidx.cardview.widget.CardView
		app:cardCornerRadius="10dp"
		app:contentPadding="5dp"
		android:layout_marginTop="15dp"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="15dp"
		android:layout_marginBottom="0dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_margin="5dp"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/tv_date"
				tools:text = "Date"
				android:textStyle="bold"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				android:textSize="25sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<TextView
				android:id="@+id/tv_temperature"
				android:text="Temperature"
				app:layout_constraintTop_toBottomOf="@id/tv_date"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				android:textStyle="bold"
				android:layout_marginTop="15dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<TextView
				android:id="@+id/tv_maximum"
				tools:text="Maximum"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@id/tv_temperature"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toStartOf="@id/tv_minimum"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<TextView
				android:id="@+id/tv_minimum"
				tools:text="Minimum"
				android:layout_marginTop="15dp"
				app:layout_constraintStart_toEndOf="@id/tv_maximum"
				app:layout_constraintTop_toBottomOf="@id/tv_temperature"
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<TextView
				android:id="@+id/tv_day"
				android:text="Day"
				android:textStyle="bold"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@id/tv_maximum"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<TextView
				android:id="@+id/tv_day_text"
				tools:text="Weather text"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@id/tv_day"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<ImageView
				android:id="@+id/day_image"
				tools:src="@drawable/image1"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@id/tv_day_text"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<TextView
				android:id="@+id/tv_day_precipitation"
				tools:text="Precipitation"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@id/day_image"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<TextView
				android:id="@+id/tv_night"
				android:text="Night"
				android:textStyle="bold"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@id/tv_day_precipitation"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />


			<TextView
				android:id="@+id/tv_night_text"
				tools:text="Weather text"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@id/tv_night"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<ImageView
				android:id="@+id/night_image"
				tools:src="@drawable/image1"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@id/tv_night_text"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<TextView
				android:id="@+id/tv_night_precipitation"
				tools:text="Precipitation"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@id/night_image"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />


		</androidx.constraintlayout.widget.ConstraintLayout>


	</androidx.cardview.widget.CardView>
</FrameLayout>